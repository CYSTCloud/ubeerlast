{% extends 'base.html.twig' %}

{% block body %}
    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h2 class="mb-0">Modifier la bière</h2>
                        </div>
                        <div class="card-body">
                            <form method="POST" action="{{ path('app_beer_edit', {'id': beer.id}) }}" class="needs-validation">
                                <div class="mb-3">
                                    <label for="beer" class="form-label">Nom de la bière</label>
                                    <input type="text" class="form-control" id="beer" name="beer" value="{{ beer.beer }}" required>
                                </div>

                                <div class="mb-3">
                                    <label for="price" class="form-label">Prix</label>
                                    <div class="input-group">
                                        <input type="number" step="0.01" class="form-control" id="price" name="price" value="{{ beer.price }}" required>
                                        <span class="input-group-text">€</span>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="brewery_id" class="form-label">Brasserie</label>
                                    <select class="form-select" id="brewery_id" name="brewery_id" required>
                                        <option value="1" {% if beer.brewery_id == 1 %}selected{% endif %}>Brasserie 1</option>
                                        <option value="2" {% if beer.brewery_id == 2 %}selected{% endif %}>Brasserie 2</option>
                                        <option value="3" {% if beer.brewery_id == 3 %}selected{% endif %}>Brasserie 3</option>
                                        <option value="4" {% if beer.brewery_id == 4 %}selected{% endif %}>Brasserie 4</option>
                                        <option value="5" {% if beer.brewery_id == 5 %}selected{% endif %}>Brasserie 5</option>
                                    </select>
                                </div>

                                <div class="mb-4">
                                    <label for="imageUrl" class="form-label">URL de l'image</label>
                                    <input type="url" class="form-control" id="imageUrl" name="imageUrl" value="{{ beer.imageUrl }}" required>
                                </div>

                                <div class="d-flex gap-2">
                                    <a href="{{ path('app_beer_show', {'id': beer.id}) }}" class="btn btn-outline-secondary">
                                        <i class="bi bi-x-circle me-2"></i>Annuler
                                    </a>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-check-circle me-2"></i>Enregistrer
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
