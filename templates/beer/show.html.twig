{% extends 'base.html.twig' %}

{% block body %}
    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <div class="row gx-4 gx-lg-5 align-items-center">
                <div class="col-md-6">
                    <img class="card-img-top mb-5 mb-md-0" src="{{ beer.imageUrl }}" alt="{{ beer.beer }}" style="max-height: 400px; object-fit: cover;" />
                </div>
                <div class="col-md-6">
                    <div class="small mb-1">
                        <span class="badge bg-primary">Brasserie {{ beer.brewery_id }}</span>
                    </div>
                    <h1 class="display-5 fw-bolder">{{ beer.beer }}</h1>
                    <div class="fs-5 mb-5">
                        <span class="text-primary">{{ beer.price }}€</span>
                    </div>
                    <div class="d-flex mt-4">
                        <a href="{{ path('app_home') }}" class="btn btn-outline-dark flex-shrink-0 me-2">
                            <i class="bi bi-arrow-left"></i> Retour
                        </a>
                        <a href="{{ path('app_beer_edit', {'id': beer.id}) }}" class="btn btn-primary flex-shrink-0 me-2">
                            <i class="bi bi-pencil"></i> Modifier
                        </a>
                        <button type="button" class="btn btn-danger flex-shrink-0" data-bs-toggle="modal" data-bs-target="#deleteModal">
                            <i class="bi bi-trash"></i> Supprimer
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Modal de confirmation de suppression -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirmer la suppression</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Êtes-vous sûr de vouloir supprimer la bière "{{ beer.beer }}" ?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <form action="{{ path('app_beer_delete', {'id': beer.id}) }}" method="post" style="display: inline;">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Supprimer
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
