{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <style>
        .btn-google {
            background-color: #dd4b39;
            color: white;
        }
        .btn-google:hover {
            background-color: #c23321;
            color: white;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h1 class="h3 mb-0">Connexion</h1>
                    </div>
                    <div class="card-body">
                        <form action="{{ path('app_login') }}" method="post">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            <div class="mb-3">
                                <label for="username">Email</label>
                                <input type="email" id="username" name="_username" value="{{ last_username }}" class="form-control">
                            </div>

                            <div class="mb-3">
                                <label for="password">Mot de passe</label>
                                <input type="password" id="password" name="_password" class="form-control">
                            </div>

                            <input type="hidden" name="_target_path" value="{{ path('app_account') }}">

                            <button type="submit" class="btn btn-primary w-100">Se connecter</button>
                        </form>

                        <div class="mt-3">
                            <a href="{{ path('connect_google') }}" class="btn btn-google w-100">
                                <i class="fab fa-google me-2"></i> Se connecter avec Google
                            </a>
                        </div>

                        <div class="mt-3 text-center">
                            <a href="{{ path('app_register') }}">Pas encore inscrit ? Cr√©ez un compte</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
